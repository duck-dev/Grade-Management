    <!-- </Style> -->
    
    <Style Selector="CalendarDayButton:pointerover">
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
        <Setter Property="Background" Value="#dcdcdc"/> <!--If overriden, this doesn't have any effect for the overriden selectors-->
    </Style>
    
    <Style Selector="CalendarDayButton:today">
        <Setter Property="BorderBrush" Value="#009B72"/>
        <Setter Property="BorderThickness" Value="3"/>
    </Style>
    
    <Style Selector="CalendarDayButton:selected">
        <Setter Property="Background" Value="#009B72"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style Selector="CalendarDayButton:selected:pointerover">
        <Setter Property="Background" Value="#08a37a"/>
    </Style>
    
    <Style Selector="CalendarDayButton:inactive">
        <Setter Property="Background" Value="#c9c9c9"/>
        <Setter Property="Foreground" Value="#808080"/>
    </Style>
    <Style Selector="CalendarDayButton:inactive:pointerover">
        <Setter Property="Background" Value="#d1d1d1"/>
    </Style>
</Styles>
