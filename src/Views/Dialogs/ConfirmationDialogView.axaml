<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:GradeManagement.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GradeManagement.Views.Dialogs.ConfirmationDialogView">
    <Design.DataContext>
        <dialogs:ConfirmationDialogViewModel/>
    </Design.DataContext>
    
    <UserControl.Styles>
        <StyleInclude Source="/src/Styles/DialogStyle.axaml"/>
    </UserControl.Styles>
    
    <Panel Classes="background-panel">
        <Panel Classes="front-panel">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Classes="title-text" DockPanel.Dock="Top" Text="{Binding Title}"/>
                <Grid RowDefinitions="*,*">
                    <Button Grid.Row="0" Classes="dialog-button" BorderBrush="{Binding BorderColors[0]}"
                            Command="{Binding Confirm}"
                            CommandParameter="{Binding $parent[UserControl]}">
                        <Viewbox Height="16" HorizontalAlignment="Stretch" Margin="20,0">
                            <TextBlock Foreground="{Binding ButtonTextColors[0]}"
                                       Text="{Binding ButtonTexts[0]}"/>
                        </Viewbox>
                    </Button>
                    <Button Grid.Row="0" Classes="dialog-button" BorderBrush="{Binding BorderColors[1]}"
                            Command="{Binding Cancel}"
                            CommandParameter="{Binding $parent[UserControl]}">
                        <Viewbox Height="16" HorizontalAlignment="Stretch" Margin="20,0">
                            <TextBlock Foreground="{Binding ButtonTextColors[1]}"
                                       Text="{Binding ButtonTexts[1]}"/>
                        </Viewbox>
                    </Button>
                </Grid>
            </DockPanel>
        </Panel>
    </Panel>
</UserControl>
