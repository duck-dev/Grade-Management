<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:listViewModels="clr-namespace:GradeManagement.ViewModels.Lists"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GradeManagement.Views.Lists.GradeListView">
    
    <Design.DataContext>
        <listViewModels:GradeListViewModel/>
    </Design.DataContext>
    
    <UserControl.Styles>
        <Style Selector="Button.grade-button">
            <Setter Property="RenderTransform" Value="scale(1)"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="Height" Value="300"/>
            <Setter Property="Background" Value="#c7cad1"/>
            <Setter Property="Margin" Value="30,30"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.grade-button /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        <Style Selector="Button.grade-button:pointerover">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform" Value="scale(0.95)"/>
        </Style>
        <Style Selector="Button.year-button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#b8babf"/>
        </Style>
        
        <Style Selector="TextBlock.no-elements-text">
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
    
    <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                    IsEnabled="{Binding EmptyCollection}" 
                    IsVisible="{Binding EmptyCollection}">
            <TextBlock Classes="no-elements-text" Margin="0,0,8,0">
                This subject doesn't yet contain grades. You can add a new grade with the green button
            </TextBlock>
            <Viewbox Width="40" Height="40" VerticalAlignment="Center">
                <Grid Width="24" Height="24">
                    <Ellipse Fill="#009B72"/>
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" TextAlignment="Center" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White"/>
                </Grid>
            </Viewbox>
            <TextBlock Classes="no-elements-text" Margin="8,0,0,0">
                in the bottom-right corner.
            </TextBlock>
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Classes="grade-button"
                                Command="{Binding $parent[Window].DataContext.OpenGrade}"
                                CommandParameter="{Binding}"
                                DragDrop.AllowDrop="True"
                                PointerPressed="BeginDrag">
                            <Button.Transitions>
                                <Transitions>
                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                                </Transitions>
                            </Button.Transitions>
                            <Grid VerticalAlignment="Stretch" RowDefinitions="*,*,*">
                                <Panel Grid.Row="0" VerticalAlignment="Stretch">
                                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="46">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="10 0 0 0"/>
                                    </Viewbox>
                                </Panel>
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto" HorizontalAlignment="Center"
                                      VerticalAlignment="Top">
                                    <Grid Grid.Column="0" ColumnDefinitions="Auto,Auto" HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Image Grid.Column="0" Source="/Assets/avalonia-logo.ico" 
                                               Margin="0,0,8,0" Width="30" Height="30"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" TextAlignment="Center"
                                                   Text="{Binding Date}"
                                                   Foreground="#999999"
                                                   FontSize="30"
                                                   Margin="8, 0, 25, 0"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/> 
                                                    <!--TODO: Consider culture-->
                                    </Grid>
                                    <TextBlock Grid.Column="1" TextAlignment="Center"
                                               Text="{Binding Path=Weighting, 
                                                             StringFormat='W  {0}'}"
                                               Foreground="#999999"
                                               FontSize="30"
                                               Margin="25, 0, 0, 0"
                                               HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                                <Panel Grid.Row="2" VerticalAlignment="Stretch">
                                    <TextBlock Text="{Binding RoundedGrade}"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="Black"
                                               FontSize="46"
                                               FontWeight="Bold"></TextBlock>
                                </Panel>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Panel>
</UserControl>
