<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:listViewModels="clr-namespace:GradeManagement.ViewModels.Lists"
             xmlns:customControls="clr-namespace:GradeManagement.Views.CustomControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GradeManagement.Views.Lists.YearListView">
    <Design.DataContext>
        <listViewModels:YearListViewModel/>
    </Design.DataContext>
    
    <UserControl.Styles>
        <StyleInclude Source="/src/Styles/ContextMenuStyle.axaml"/>
        <StyleInclude Source="/src/Styles/ListViewStyle.axaml"/>
        
        <Style Selector="Button.element-button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#b8babf"/>
        </Style>
    </UserControl.Styles>

    <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                    IsEnabled="{Binding EmptyCollection}" 
                    IsVisible="{Binding EmptyCollection}">
            <TextBlock Classes="no-elements-text" Margin="0,0,8,0">
                This subject doesn't yet contain grades. You can add a new grade with the green button
            </TextBlock>
            <Viewbox Width="40" Height="40" VerticalAlignment="Center">
                <Grid Width="24" Height="24">
                    <Ellipse Fill="#009B72"/>
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" TextAlignment="Center" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White"/>
                </Grid>
            </Viewbox>
            <TextBlock Classes="no-elements-text" Margin="8,0,0,0">
                in the bottom-right corner.
            </TextBlock>
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding $parent[Window].DataContext.OpenYear}"
                                CommandParameter="{Binding}"
                                Classes="element-button element-button-grid"
                                Width="500" Height="300">
                            <Button.Transitions>
                                <Transitions>
                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                                </Transitions>
                            </Button.Transitions>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit School Year" 
                                              Command="{Binding $parent[Window].DataContext.EditYear}"
                                              CommandParameter="{Binding}"/>
                                    <MenuItem Header="Duplicate School Year"
                                              Command="{Binding $parent[UserControl].DataContext.Duplicate}"
                                              CommandParameter="{Binding}">
                                    </MenuItem>
                                    <MenuItem Header="Remove School Year"
                                              Command="{Binding $parent[UserControl].DataContext.RemoveElement}"
                                              CommandParameter="{Binding}"/>
                                    <MenuItem Header="Create Year-Template"/>
                                              <!-- Command="{Binding $parent[UserControl].DataContext.CreateTemplate}" -->
                                              <!-- CommandParameter="{Binding}"/> -->
                                </ContextMenu>
                            </Button.ContextMenu>
                            <Grid VerticalAlignment="Stretch" RowDefinitions="*,*">
                                <Panel Grid.Row="0" VerticalAlignment="Stretch">
                                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="56">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="10 0 0 0"/>
                                    </Viewbox>
                                </Panel>
                                <Panel Grid.Row="1" VerticalAlignment="Stretch">
                                    <Grid ColumnDefinitions="Auto,Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Grid.Column="0" TextAlignment="Center"
                                                   Text="{Binding Path=Subjects.Count, 
                                                                 StringFormat='=  {0}'}"
                                                   Foreground="#878787"
                                                   FontSize="42"
                                                   Margin="0, 0, 35, 0"/>
                                        <TextBlock Grid.Column="1" TextAlignment="Center"
                                                   Text="{Binding Path=Average, 
                                                                 StringFormat='Ø  {0}'}"
                                                   Foreground="#878787"
                                                   FontSize="42"
                                                   Margin="35, 0, 0, 0"/>
                                    </Grid>
                                </Panel>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Panel>
</UserControl>