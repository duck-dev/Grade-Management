<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:listViewModels="clr-namespace:GradeManagement.ViewModels.Lists"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GradeManagement.Views.Lists.SubjectListView">
    
    <Design.DataContext>
        <listViewModels:SubjectListViewModel/>
    </Design.DataContext>
    
    <UserControl.Styles>
        <StyleInclude Source="/src/Styles/ContextMenuStyle.axaml"/>
        <Style Selector="Button.subject-button /template/ ContentPresenter">
            <Setter Property="RenderTransform" Value="scale(1)"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="350"/>
            <Setter Property="Margin" Value="30,30"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.subject-button:pointerover">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform" Value="scale(0.95)"/>
        </Style>
        
        <Style Selector="TextBlock.no-elements-text">
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
    
    <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                    IsEnabled="{Binding EmptyCollection}" 
                    IsVisible="{Binding EmptyCollection}">
            <TextBlock Classes="no-elements-text" Margin="0,0,8,0">
                This subject doesn't yet contain grades. You can add a new grade with the green button
            </TextBlock>
            <Viewbox Width="40" Height="40" VerticalAlignment="Center">
                <Grid Width="24" Height="24">
                    <Ellipse Fill="#009B72"/>
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" TextAlignment="Center" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               Foreground="White"/>
                </Grid>
            </Viewbox>
            <TextBlock Classes="no-elements-text" Margin="8,0,0,0">
                in the bottom-right corner.
            </TextBlock>
        </StackPanel>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding $parent[Window].DataContext.OpenSubject}"
                                CommandParameter="{Binding}"
                                Classes="subject-button">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0%,100%" EndPoint="100%,0%">
                                    <GradientStop Color="{Binding SubjectColor}" Offset="0.0"/>
                                    <GradientStop Color="#c7cad1" Offset="0.9"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{Binding BackgroundBrushHover}"/>
                                </Style>
                            </Button.Styles>
                            <Button.Transitions>
                                <Transitions>
                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                                </Transitions>
                            </Button.Transitions>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit Subject" 
                                              Command="{Binding $parent[Window].DataContext.EditSubject}"
                                              CommandParameter="{Binding}"/>
                                    <MenuItem Header="Duplicate Subject"
                                              Command="{Binding $parent[UserControl].DataContext.Duplicate}"
                                              CommandParameter="{Binding}">
                                    </MenuItem>
                                    <MenuItem Header="Remove Subject"
                                              Command="{Binding $parent[UserControl].DataContext.RemoveElement}"
                                              CommandParameter="{Binding}"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                            <Grid VerticalAlignment="Stretch" RowDefinitions="*,*,*">
                                <Panel Grid.Row="0" VerticalAlignment="Stretch">
                                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="46">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding TitleBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="10 0 0 0"/>
                                    </Viewbox>
                                </Panel>
                                <Panel Grid.Row="1" VerticalAlignment="Stretch">
                                    <Grid ColumnDefinitions="Auto,Auto" VerticalAlignment="Top" HorizontalAlignment="Center">
                                        <TextBlock Grid.Column="0" TextAlignment="Center"
                                                   Text="{Binding Path=Grades.Count,
                                                                 StringFormat='=  {0}'}"
                                                   Foreground="{Binding AdditionalInfoColor}"
                                                   FontSize="30"
                                                   Margin="0, 0, 25, 0"/>
                                        <TextBlock Grid.Column="1" TextAlignment="Center"
                                                   Text="{Binding Path=Weighting, 
                                                                 StringFormat='W  {0}'}"
                                                   Foreground="{Binding AdditionalInfoColor}"
                                                   FontSize="30"
                                                   Margin="25, 0, 0, 0"/>
                                    </Grid>
                                </Panel>
                                <Panel Grid.Row="2" VerticalAlignment="Stretch">
                                    <TextBlock Text="{Binding RoundedAverage}"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="Black"
                                               FontSize="46"
                                               FontWeight="Bold"/>
                                </Panel>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="57.5, 0, 0, 45"
                Width="150" Height="175"/>
    </Panel>
</UserControl>
