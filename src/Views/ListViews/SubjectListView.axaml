<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:GradeManagement.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GradeManagement.Views.SubjectListView">
    
    <Design.DataContext>
        <viewModels:SubjectListViewModel/>
    </Design.DataContext>
    
    <UserControl.Styles>
        <Style Selector="Button.subject-button /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="20"></Setter>
        </Style>
        <Style Selector="Button.subject-button:pointerover">
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="RenderTransform" Value="scale(0.95)"></Setter>
        </Style>
        <!-- <Style Selector="Button.subject-button:pressed"> -->
        <!--     <Setter Property="Background" Value="{Binding}"></Setter> -->
        <!-- </Style> -->
    </UserControl.Styles>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <ItemsControl Items="{Binding Items}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding $parent[Window].DataContext.OpenSubject}"
                            CommandParameter="{Binding}"
                            Classes="subject-button"
                            Width="350"
                            Height="350"
                            Margin="30, 30"
                            BorderThickness="0"
                            DragDrop.AllowDrop="True"
                            PointerPressed="BeginDrag">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0%,100%" EndPoint="100%,0%">
                                <GradientStop Color="{Binding SubjectColor}" Offset="0.0"/>
                                <GradientStop Color="#c7cad1" Offset="0.9"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Transitions>
                            <Transitions>
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                            </Transitions>
                        </Button.Transitions>
                        <Grid VerticalAlignment="Stretch" RowDefinitions="*,*,*">
                            <Panel Grid.Row="0" VerticalAlignment="Stretch">
                                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="46">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               Foreground="{Binding TitleBrush}"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               Margin="10 0 0 0"/>
                                </Viewbox>
                            </Panel>
                            <Panel Grid.Row="1" VerticalAlignment="Stretch">
                                <Grid ColumnDefinitions="Auto,Auto" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <TextBlock Grid.Column="0" TextAlignment="Center"
                                               Text="{Binding Path=Grades.Count,
                                                             StringFormat='=  {0}'}"
                                               Foreground="{Binding AdditionalInfoColor}"
                                               FontSize="30"
                                               Margin="0, 0, 25, 0"/>
                                    <TextBlock Grid.Column="1" TextAlignment="Center"
                                               Text="{Binding Path=Weighting, 
                                                             StringFormat='W  {0}'}"
                                               Foreground="{Binding AdditionalInfoColor}"
                                               FontSize="30"
                                               Margin="25, 0, 0, 0"/>
                                </Grid>
                            </Panel>
                            <Panel Grid.Row="2" VerticalAlignment="Stretch">
                                <TextBlock Text="{Binding RoundedAverage}"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="Black"
                                           FontSize="46"
                                           FontWeight="Bold"></TextBlock>
                            </Panel>
                        </Grid>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
